{
  "$schema": "https://design-tokens.org/schema/v1",
  "name": "PinGlass Animation Tokens",
  "version": "1.0.0",

  "easing": {
    "default": {
      "value": "cubic-bezier(0.22, 1, 0.36, 1)",
      "description": "Primary easing for most animations - smooth deceleration"
    },
    "bounce": {
      "value": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "description": "Bouncy overshoot effect for playful interactions"
    },
    "smooth": {
      "value": "cubic-bezier(0.4, 0, 0.2, 1)",
      "description": "Standard Material Design easing"
    },
    "easeInOut": {
      "value": "cubic-bezier(0.65, 0, 0.35, 1)",
      "description": "Symmetric ease for looping animations"
    },
    "easeOut": {
      "value": "cubic-bezier(0.16, 1, 0.3, 1)",
      "description": "Fast start, slow end for exits"
    },
    "spring": {
      "value": "cubic-bezier(0.175, 0.885, 0.32, 1.275)",
      "description": "Spring-like bounce for interactive elements"
    }
  },

  "duration": {
    "instant": {"value": "100ms", "description": "Micro-interactions"},
    "fast": {"value": "200ms", "description": "Button states, tooltips"},
    "normal": {"value": "300ms", "description": "Standard transitions"},
    "slow": {"value": "500ms", "description": "Modal entrances"},
    "slower": {"value": "800ms", "description": "Page transitions"},
    "slowest": {"value": "1200ms", "description": "Complex animations"}
  },

  "keyframes": {
    "fadeIn": {
      "from": {"opacity": "0"},
      "to": {"opacity": "1"}
    },
    "fadeInUp": {
      "from": {"opacity": "0", "transform": "translateY(20px) scale(0.98)"},
      "to": {"opacity": "1", "transform": "translateY(0) scale(1)"}
    },
    "fadeInScale": {
      "from": {"opacity": "0", "transform": "scale(0.95)"},
      "to": {"opacity": "1", "transform": "scale(1)"}
    },
    "slideUp": {
      "from": {"transform": "translateY(100%)"},
      "to": {"transform": "translateY(0)"}
    },
    "slideDown": {
      "from": {"transform": "translateY(-100%)"},
      "to": {"transform": "translateY(0)"}
    },
    "scaleIn": {
      "from": {"opacity": "0", "transform": "scale(0.9)"},
      "to": {"opacity": "1", "transform": "scale(1)"}
    },
    "bounceIn": {
      "0%": {"opacity": "0", "transform": "scale(0.3)"},
      "50%": {"transform": "scale(1.05)"},
      "70%": {"transform": "scale(0.9)"},
      "100%": {"opacity": "1", "transform": "scale(1)"}
    },
    "celebrationEnter": {
      "0%": {"opacity": "0", "transform": "scale(0.5)"},
      "60%": {"transform": "scale(1.1)"},
      "80%": {"transform": "scale(0.95)"},
      "100%": {"opacity": "1", "transform": "scale(1)"}
    },
    "shimmer": {
      "0%": {"background-position": "-200% 0"},
      "100%": {"background-position": "200% 0"}
    },
    "pulse": {
      "0%, 100%": {"opacity": "1"},
      "50%": {"opacity": "0.5"}
    },
    "pulseSubtle": {
      "0%, 100%": {"opacity": "1"},
      "50%": {"opacity": "0.85"}
    },
    "spin": {
      "from": {"transform": "rotate(0deg)"},
      "to": {"transform": "rotate(360deg)"}
    },
    "float": {
      "0%, 100%": {"transform": "translateY(0)"},
      "50%": {"transform": "translateY(-10px)"}
    }
  },

  "neonEffects": {
    "neonFlicker": {
      "0%, 100%": {
        "opacity": "1",
        "box-shadow": "0 0 10px oklch(0.70 0.16 350 / 0.5), 0 0 20px oklch(0.70 0.16 350 / 0.3)"
      },
      "50%": {
        "opacity": "0.8",
        "box-shadow": "0 0 15px oklch(0.70 0.16 350 / 0.6), 0 0 30px oklch(0.70 0.16 350 / 0.4)"
      }
    },
    "neonFlickerAlt": {
      "0%, 100%": {"opacity": "0.9", "filter": "brightness(1)"},
      "25%": {"opacity": "1", "filter": "brightness(1.1)"},
      "50%": {"opacity": "0.85", "filter": "brightness(0.95)"},
      "75%": {"opacity": "1", "filter": "brightness(1.05)"}
    },
    "holographicShine": {
      "0%": {"background-position": "0% 50%"},
      "50%": {"background-position": "100% 50%"},
      "100%": {"background-position": "0% 50%"}
    },
    "holographicBorder": {
      "0%, 100%": {
        "border-color": "oklch(0.70 0.16 350)",
        "box-shadow": "0 0 15px oklch(0.70 0.16 350 / 0.4)"
      },
      "33%": {
        "border-color": "oklch(0.80 0.12 30)",
        "box-shadow": "0 0 15px oklch(0.80 0.12 30 / 0.4)"
      },
      "66%": {
        "border-color": "oklch(0.65 0.18 290)",
        "box-shadow": "0 0 15px oklch(0.65 0.18 290 / 0.4)"
      }
    }
  },

  "orbitalAnimations": {
    "orbit": {
      "from": {"transform": "rotate(0deg)"},
      "to": {"transform": "rotate(360deg)"},
      "duration": "30s",
      "timing": "linear",
      "iteration": "infinite"
    },
    "orbitReverse": {
      "from": {"transform": "rotate(0deg)"},
      "to": {"transform": "rotate(-360deg)"},
      "duration": "30s",
      "timing": "linear",
      "iteration": "infinite"
    },
    "orbitSmooth": {
      "from": {"transform": "rotate(0deg) translateX(var(--orbit-radius)) rotate(0deg)"},
      "to": {"transform": "rotate(360deg) translateX(var(--orbit-radius)) rotate(-360deg)"},
      "duration": "25s",
      "timing": "linear",
      "iteration": "infinite",
      "description": "Preserves element rotation during orbit"
    },
    "orbitSmoothReverse": {
      "from": {"transform": "rotate(0deg) translateX(var(--orbit-radius)) rotate(0deg)"},
      "to": {"transform": "rotate(-360deg) translateX(var(--orbit-radius)) rotate(360deg)"},
      "duration": "35s",
      "timing": "linear",
      "iteration": "infinite"
    }
  },

  "logoAnimations": {
    "logoBreathe": {
      "0%, 100%": {
        "transform": "scale(1)",
        "filter": "drop-shadow(0 0 8px oklch(0.70 0.16 350 / 0.4))"
      },
      "50%": {
        "transform": "scale(1.02)",
        "filter": "drop-shadow(0 0 16px oklch(0.70 0.16 350 / 0.6))"
      },
      "duration": "3s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "pinglassGlowPulse": {
      "0%, 100%": {"box-shadow": "0 0 5px oklch(0.70 0.16 350 / 0.4)"},
      "50%": {"box-shadow": "0 0 15px oklch(0.70 0.16 350 / 0.7)"},
      "duration": "2.5s"
    },
    "pinglassNeonBreathe": {
      "0%, 100%": {
        "text-shadow": "0 0 10px oklch(0.70 0.16 350 / 0.5), 0 0 20px oklch(0.70 0.16 350 / 0.3)"
      },
      "50%": {
        "text-shadow": "0 0 20px oklch(0.70 0.16 350 / 0.7), 0 0 40px oklch(0.70 0.16 350 / 0.5)"
      },
      "duration": "3s"
    }
  },

  "confettiAnimation": {
    "confettiFall": {
      "0%": {"opacity": "1", "transform": "translateY(-100vh) rotate(0deg)"},
      "100%": {"opacity": "0", "transform": "translateY(100vh) rotate(720deg)"},
      "duration": "3s to 5s (random)",
      "timing": "linear"
    },
    "confettiColors": [
      "oklch(0.70 0.16 350)",
      "oklch(0.80 0.11 80)",
      "oklch(0.65 0.18 340)",
      "oklch(0.75 0.14 10)",
      "oklch(0.85 0.12 200)"
    ]
  },

  "hoverEffects": {
    "hoverLift": {
      "transform": "translateY(-2px)",
      "transition": "transform 0.2s ease"
    },
    "hoverGlow": {
      "box-shadow": "0 8px 30px rgba(255, 107, 107, 0.35)",
      "transition": "box-shadow 0.3s ease"
    },
    "hoverScale": {
      "transform": "scale(1.03)",
      "transition": "transform 0.2s ease"
    },
    "activePress": {
      "transform": "scale(0.96)",
      "transition": "transform 0.1s ease"
    }
  },

  "reducedMotion": {
    "query": "@media (prefers-reduced-motion: reduce)",
    "rules": {
      "animation-duration": "0.01ms !important",
      "animation-iteration-count": "1 !important",
      "transition-duration": "0.01ms !important"
    }
  }
}
