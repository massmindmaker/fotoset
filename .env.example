# Database (Required for production)
DATABASE_URL=postgresql://user:password@host:5432/database

# Google AI (Required)
GOOGLE_API_KEY=your_google_ai_api_key

# T-Bank Payment (Required for payments)
# Test terminals have "DEMO" suffix (e.g., 1765404063316DEMO)
# Test terminals use REAL T-Bank API but accept test card numbers
# Without credentials, app runs in demo mode with mock payments
TBANK_TERMINAL_KEY=your_tbank_terminal_key
TBANK_PASSWORD=your_tbank_password

# YeScale Proxy (Optional - for Google Imagen API proxy)
YESCALE_API_KEY=your_yescale_api_key

# Telegram Bot (Optional - enables Telegram Mini App authentication)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Telegram WebApp URL (Optional - redirect web users to Telegram app)
NEXT_PUBLIC_TELEGRAM_WEBAPP_URL=https://t.me/YourBot/app

# App URL (Required for payment callbacks and QStash)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Upstash QStash (Optional - enables background job processing)
# Without QStash, generation runs locally (may timeout on Vercel)
# Get keys from: https://console.upstash.com/qstash
QSTASH_TOKEN=ey...
QSTASH_CURRENT_SIGNING_KEY=sig_...
QSTASH_NEXT_SIGNING_KEY=sig_...

# Sentry Error Monitoring (Optional - enables error tracking)
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
# Client-side DSN (exposed to browser)
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/1234567

# Admin Panel Logs Integration (required for /admin/logs page)
# Auth token with event:read scope - Get from: https://sentry.io/settings/auth-tokens/
# NOTE: Vercel auto-adds fotoset_ prefix. Code supports both formats.
SENTRY_AUTH_TOKEN=your_sentry_auth_token_with_event_read_scope
# OR with Vercel prefix:
# fotoset_SENTRY_AUTH_TOKEN=your_sentry_auth_token_with_event_read_scope

# Organization slug (e.g., "pinglass")
SENTRY_ORG=your-org-slug
# OR: fotoset_SENTRY_ORG=your-org-slug

# Project slug (e.g., "sentry-purple-zebra")
SENTRY_PROJECT=your-project-slug
# OR: fotoset_SENTRY_PROJECT=your-project-slug

# Cloudflare R2 Storage (Optional - for image storage)
# Get from: https://dash.cloudflare.com/ -> R2 -> Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=pinglass
# Public URL for accessing images (custom domain or R2.dev URL)
# Example: https://cdn.yourdomain.com or https://pub-xxx.r2.dev
R2_PUBLIC_URL=https://your-r2-public-url

# Admin Panel Session (Required for /admin)
# Generate with: openssl rand -base64 32
ADMIN_SESSION_SECRET=your_admin_session_secret_at_least_32_chars

# Partner Panel Session (Optional - defaults to ADMIN_SESSION_SECRET)
# If not set, uses ADMIN_SESSION_SECRET for signing JWTs
PARTNER_SESSION_SECRET=your_partner_session_secret_at_least_32_chars
# Session TTL in seconds (default: 604800 = 7 days)
PARTNER_SESSION_TTL=604800
