{
  "_comment": "Cache bust 2026-01-22 - force fresh TypeScript compilation",
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "functions": {
    "app/api/generate/route.ts": {
      "maxDuration": 60
    },
    "app/api/jobs/process/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/check-stuck-jobs/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/poll-kie-tasks/route.ts": {
      "maxDuration": 55
    },
    "app/api/cron/poll-preview-tasks/route.ts": {
      "maxDuration": 55
    },
    "app/api/cron/ton-monitor/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/cancel-stale-payments/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-stuck-jobs",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/poll-kie-tasks",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron/poll-preview-tasks",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron/ton-monitor",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/cancel-stale-payments",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/cleanup-sessions",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/cleanup-storage",
      "schedule": "0 3 * * *"
    }
  ]
}
